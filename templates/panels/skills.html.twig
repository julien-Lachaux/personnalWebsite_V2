<article class="panel" id="skills-panel">

    {% include 'components/panels/panelDecoration.html.twig' %}
    {% include 'components/panels/panelTitle.html.twig' %}
    
    <div class="panel-nav dark-{{ panel.colorTheme.name }}-background">
        <ul class="filter">
            <li><a href="All" class="active">All</a></li>
            {% for skillGroup in skills_groups %}
                <li><a href="{{ skillGroup.name }}">{{ skillGroup.name }}</a></li>
            {% endfor %}
        </ul>
        <div class="search mobile-hidden">
            <input type="text" required>
            <label>Search</label>
            <i class="material-icons">search</i>
        </div>
    </div>

    <div class="content">
        <div class="skills-container">
            <div class="cards-mosaic">
                {% for skillGroup in skills_groups %}
                    {% for skill in skillGroup.skills | sortbyfield('name') %}
                        <div class="card" data-search="{{ skill.name }}" data-filter="{{ skillGroup.name }}">
                            <div class="card-head limit-padding-top">
                                <div class="card-title">{{ skill.name }}</div>
                                <div class="card-subtitle">{{ skillGroup.name }}</div>
                                <div class="card-decoration">
                                    <img src="images/card-decoration/logoCard-{{ skillGroup.name }}.svg">
                                </div>
                            </div>
                            <div class="card-body" style="background: #{{ skillGroup.color }}">
                                <div class="card-logo"><i class="{{ skill.picture }}"></i></div>
                                <ul class="card-stars">
                                    {% for i in 1..5 %}
                                        {% if i <= skill.level %}
                                            <i class="material-icons">star</i>
                                        {% else %}
                                            <i class="material-icons">star_border</i>
                                        {% endif %}
                                        
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <div class="contactMe {{ panel.colorTheme.name }}-text-hover">
            <div class="contactMe-decorationLeft"><i class="material-icons">person</i>{{ contactMe.decorationLeft|raw }}</div>
            <span class="contactMe-text">Contactez moi !</span>
        </div>
    </div>
</article>