<article class="panel" id="experiences-panel">

    {% include 'components/panels/panelDecoration.html.twig' %}
    {% include 'components/panels/panelTitle.html.twig' %}
    
    <div class="content">
        <div class="experiences-container">
            <div class="cards-gallery">
                {% for experience in experiences %}
                    <div class="card" data-descr="{{ experience.dateStart|date('d/m/Y') }} - {{ experience.dateEnd|date('d/m/Y') }}">
                        <div class="card-header">
                            <div class="card-title">{{ experience.company }}</div>
                            <div class="card-subtitle font-mono {{ experience.color }}-text">{{ experience.job }}</div>
                            <div class="date font-mono">{{ experience.dateStart|date('d-M-Y') }} - {{ experience.dateEnd|date('d-M-Y') }}</div>
                        </div>
                        <article class="card-body">
                            <p>
                                {{ experience.description|raw }}
                            </p>
                        </article>
                        <aside class="card-tags">
                            <ul class="tags">
                                {% for tag in experience.tags %}
                                    <li class="tag {{ experience.color }}">
                                        <div class="hexagon" style="overflow: hidden;">
                                            <i class="{{ tag.picture }}"></i>
                                            <div class="font-mono">{{ tag.name }}</div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </aside>
                        <div class="card-decorations">
                            <div class="topLeft-decoration">
                                {{ experience.logoCard|raw }}
                                <img class="logo" src="{{ experience.logo }}" alt="logo de {{ experience.company }}" >
                            </div>
                            <div class="bottomRight-decoration mobile-hidden">
                                {{ experience.decorationCard|raw }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="contactMe {{ panel.colorTheme.name }}-text-hover">
            <div class="contactMe-decorationLeft"><i class="material-icons">person</i>{{ contactMe.decorationLeft|raw }}</div>
            <span class="contactMe-text">Contactez moi !</span>
        </div>
    </div>
</article>