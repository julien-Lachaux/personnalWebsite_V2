<article class="panel" id="realisations-panel">

    {% include 'components/panels/panelDecoration.html.twig' %}
    {% include 'components/panels/panelTitle.html.twig' %}
    
    <div class="content">

        <div class="section-title">Productions Graphique</div>
        <div class="section-subtitle">Du fond d'écran au logo en passant par des éléments de décorations de site web</div>
        <div class="images-mosaic">
            {% for graphic in realisations.graphics %}
            <div class="image">
                <div class="image-cover"><i class="material-icons">zoom_in</i></div>
                <img src="images/realisations/graphics/{{ graphic.path }}">
            </div>
            {% endfor %}
        </div>
        <div class="section-title">Développement Web</div>
        <div class="section-subtitle">Programmes & Sites Web</div>

        <div class="realisations-list">
            {% for realisation in realisations.web %}
                <div class="realisation">
                    <div class="realisationShowcase">
                        <div class="macbook">
                            <div class="showcase" style="background-image: url('images/realisations/responsiveShowcase/laptop/{{ realisation.imgLaptop }}')"></div>
                            <img src="images/realisations/responsiveShowcase/macbook.png">
                        </div>
                        <div class="iphone">
                            <div class="showcase" style="background-image: url('images/realisations/responsiveShowcase/phone/{{ realisation.imgPhone }}')"></div>
                            <img src="images/realisations/responsiveShowcase/iphone.png">
                        </div>
                    </div>
                    <div class="realisationInfo">
                        <div class="realisationTitle">{{ realisation.title }}</div>
                        <div class="realisationDescription">{{ realisation.description }}</div>
                    </div>
                </div>    
            {% endfor %}
        </div>
        <div class="contactMe">
            <div class="contactMe-decorationLeft">{{ contactMe.decorationLeft|raw }}</div>
            <span class="contactMe-text">Contactez moi !</span>
            <div class="contactMe-decorationRight">{{ contactMe.decorationRight|raw }}</div>
        </div>
    </div>
</article>